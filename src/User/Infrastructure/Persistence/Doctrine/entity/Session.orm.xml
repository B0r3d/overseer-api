<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Overseer\User\Domain\Entity\Session" table="sessions">
        <many-to-one field="user" target-entity="Overseer\User\Domain\Entity\User">
            <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>

        <id name="id" type="string" length="191" />
        <embedded name="expiryDate" class="Overseer\Shared\Domain\ValueObject\ExpiryDate" column-prefix="expiry_date_" />
        <field name="sessionStart" type="datetime" />
        <field name="refreshToken" type="text" />
        <embedded name="status" class="Overseer\User\Domain\Enum\SessionStatus" column-prefix="status_" />
        <field name="lastRefreshDate" type="datetime" nullable="true" />
    </entity>
</doctrine-mapping>