<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Overseer\User\Domain\Entity\RefreshToken" table="refresh_tokens">

        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <embedded name="uuid" class="Overseer\User\Domain\ValueObject\RefreshTokenId" column-prefix="uuid_" />
        <embedded name="expiryDate" class="Overseer\User\Domain\ValueObject\ExpiryDate" column-prefix="expiry_date_" />
        <field name="createdAt" type="datetime" />
        <field name="valid" type="boolean" />

        <many-to-one field="user" target-entity="Overseer\User\Domain\Entity\User">
            <join-column name="user_id" referenced-column-name="id" on-delete="CASCADE" />
        </many-to-one>
    </entity>
</doctrine-mapping>